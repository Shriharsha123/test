<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/npEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of processes"
        android:inputType="number"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/nrEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of resources"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/allocationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter allocation matrix (e.g., 1 2 2 1\n1 0 3 3)"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/maxEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter max matrix (e.g., 3 3 2 2\n1 1 3 4)"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/availableEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter available matrix (e.g., 3 1 1 2)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"/>

</LinearLayout>
