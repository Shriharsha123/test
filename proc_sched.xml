<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".proSchedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/proSchedCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/custom"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/proSchedRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/random"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/proSchedPreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/preset"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/procCreateCol"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/create_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:insetLeft="15dp"
                    android:insetRight="15dp"
                    android:text="@string/create_process" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resCreateCol"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/create_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:insetLeft="15dp"
                    android:insetRight="15dp"
                    android:text="@string/create_resource" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>